<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.vault.js"></script>
    <script src="~/Scripts/Chart.js"></script>
    <style>
        .navbar-inverse .navbar-nav > .open > a, .navbar-inverse .navbar-nav > .open > a:hover, .navbar-inverse .navbar-nav > .open > a:focus {
            background-color: transparent;
        }

        .dropdown-menu > li > a:hover, .dropdown-menu > li > a:focus {
            background-color: transparent;
        }

        .dropdown-menu > li > a {
            font-weight: 700;
            font-size: large;
            font-family: 'Imprint MT Shadow';
        }

        .navbar-inverse {
            font-weight: 700;
            font-size: x-large;
            font-family: 'Imprint MT Shadow';
            background-color: brown;
            margin: 0
        }
    </style>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">

            <div class="navbar-header">
                <a href="/Home/Index">
                    <img src="https://i.loli.net/2019/08/26/QyFtTsuxdPk7pqB.png"
                         style="width:50px;height:50px">
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">
                    <div style="color:whitesmoke;">Paws Home</div>
                </div>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li id="nav_h"><a style="color:whitesmoke;margin-left:10px;margin-right:15px" href="/Home/Index">Home</a></li>

                    <li id="nav_s" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" herf="#" role="button" aria-haspopup="true" aria-expanded="false"
                           style="color:whitesmoke;margin-left:10px;margin-right:15px">
                            Get Started<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" style="background-color:brown">
                            <li id="nav_s_1"><a style="color:whitesmoke;font-weight:700" href="/Dogs/Budget">Ownership Budget</a></li>
                            <li id="nav_s_2"><a style="color:whitesmoke;font-weight:700" href="/Dogs/Report">Breed Selector</a></li>
                        </ul>
                    </li>

                    <li id="nav_b" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" herf="#" role="button" aria-haspopup="true" aria-expanded="false"
                           style="color:whitesmoke;margin-left:10px;margin-right:15px">
                            Breed<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" style="background-color:brown">
                            <li id="nav_b_1"><a style="color:whitesmoke;font-weight:700" href="/Dogs/Index">Breed List</a></li>
                            <li id="nav_b_2"><a style="color:whitesmoke;font-weight:700" href="/Home/Chart">Statistic</a></li>
                        </ul>
                    </li>

                    <li id="nav_a"><a style="color:whitesmoke;margin-left:10px;margin-right:15px" href="/Activities/Index">Activity</a></li>

                    <li id="nav_m"><a style="color:whitesmoke;margin-left:10px;margin-right:15px" href="/Home/Map">Service</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
        var location = "@ViewBag.Title";
        switch (location)
        {
            case "Home":
                document.getElementById("nav_h").style.backgroundColor = "black";
                break;
             case "List":
                document.getElementById("nav_b_1").style.backgroundColor = "black";
                document.getElementById("nav_b").style.backgroundColor = "black";
                break;
             case "Chart":
                document.getElementById("nav_b_2").style.backgroundColor = "black";
                document.getElementById("nav_b").style.backgroundColor = "black";
                break;
             case "Budget":
                document.getElementById("nav_s_1").style.backgroundColor = "black";
                document.getElementById("nav_s").style.backgroundColor = "black";
                break;
             case "Report":
                document.getElementById("nav_s_2").style.backgroundColor = "black";
                document.getElementById("nav_s").style.backgroundColor = "black";
                break;
             case "Activity":
                document.getElementById("nav_a").style.backgroundColor = "black";
                break;
             case "Map":
                document.getElementById("nav_m").style.backgroundColor = "black";
                break;

        }});

    </script>
</body>
</html>

                            <li><a style="color:whitesmoke;font-weight:700" href="/Dogs/Index">List</a></li>
                            <li><a style="color:whitesmoke;font-weight:700" href="/Home/Chart">Statistic</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
